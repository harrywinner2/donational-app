section.section
  .container
    .columns
      .column.is-8
        h1.title
          = @profile.name
          | 's Portfolio of Giving
    .columns
      .column.is-8
        .content
          img src="https://via.placeholder.com/600x300" width="100%"
      .column.is-3.is-offset-1
        .content
          h3.subtitle
            ' Support this portfolio
          p
            ' Be one of
            = @profile.first_name
            ' 's top backers by donating towards the charities in this portfolio.
          progress.progress.is-primary.is-marginless value="30" max="100" 30%
          p
            small
              strong> 3 backers
              ' have already shown their support for
              = @profile.first_name
              | 's values
              
              
          a.button.is-primary.action.modal-button.is-fullwidth.is-medium data-target="payment"
            | Donate to Ian's portfolio
          p.help.has-text-centered
            ' No fees! Every dollar you donate goes to the charities in
            = @profile.first_name
            | 's portfolio

