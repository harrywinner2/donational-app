section.section
  #auth0-login

css:
  .auth0-lock-header-bg { display: none; }
  .auth0-lock.auth0-lock button.auth0-lock-submit {
    width: 260px;
    margin: 0 20px;
    border-radius: 5px;
  }

javascript:
  loadjs('https://cdn.auth0.com/js/lock/11.3.1/lock.min.js', {
    success: function() {
      var lock = new Auth0LockPasswordless(
        '#{ENV.fetch('AUTH0_CLIENT_ID')}',
        '#{ENV.fetch('AUTH0_DOMAIN')}',
        {
          container: 'auth0-login',
          closable: false,
          allowedConnections: ['email', 'google-oauth2', 'facebook', 'linkedin'],
          passwordlessMethod: 'link',
          responseType: 'token id_token',
          auth: {
            redirectUrl: '#{@callback_url}',
            params: {
              scope: 'openid email',
              state: '#{@csrf_state}'
            }
          },
          theme: {
            logo: 'https://placeholdit.co/i/1x1?&bg=fff',
            primaryColor: '#8600ED'
          },
          languageDictionary: { title: 'Sign in' }
        }
      );
      lock.show();
    }
  });
