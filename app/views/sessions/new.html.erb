<div id='auth0-login'>
<script src="https://cdn.auth0.com/js/lock-passwordless-2.2.min.js"></script>
<script>
  var lock = new Auth0LockPasswordless('<%= ENV['AUTH0_CLIENT_ID'] %>', '<%= ENV['AUTH0_DOMAIN'] %>');
  lock.socialOrMagiclink({
    authParams: { state: $('meta[name="state"]').attr('content') },
    container: 'auth0-login',
    callbackURL: '<%= auth_oauth2_callback_url %>',
    connections: ['google-oauth2', 'facebook', 'twitter']
  });
</script>
