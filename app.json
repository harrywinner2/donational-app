{
  "name": "donational-app",
  "scripts": {
    "postdeploy": "bin/rails db:schema:load"
  },
  "env": {
    "AUTH0_CLIENT_ID": {
      "required": true
    },
    "AUTH0_CLIENT_SECRET": {
      "required": true
    },
    "AUTH0_DOMAIN": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "RAILS_ENV": "staging",
    "DEFAULT_HOST": "some-review-app-name.herokuapp.com",
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    }
  },
  "environments": {
    "test": {
      "env": {
        "RAILS_ENV": "test",
        "AUTH0_CLIENT_ID": "xxx",
        "AUTH0_CLIENT_SECRET": "xxx",
        "AUTH0_DOMAIN": "donatedirectly.auth0.com"
      },
      "scripts": {
        "test": "bin/test"
      }
    }
  },
  "formation": {
  },
  "addons": [
    "heroku-postgresql",
    "redistogo",
    "sendgrid"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
